<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/products.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            color: #d96459;
            font-family: monospace;
            font-size: 25px;
            text-align: left;
        }
        table, th, td {
            border: 1px solid black;
            padding: 5px;
        }
        th, td {
            padding: 15px;
        }
        th {
            background-color: white;
        }
    </style>
</head>

<body>
    <%include ../navbar/navbar.ejs %>
    <h1>Products:</h1>
    <table>
        <thread>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thread>
    </table>
    <tbody>
        <% products.forEach(function(product) { %>
        <tr>
            <td><%= product.product_id %></td>
            <td><%= product.product_name %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
            <td>
                <a href="/products/<%= product.product_id %>" class="btn btn-info">View</a>
                <a href="/products/edit/<%= product.product_id %>" class="btn btn-primary">Edit</a>
                <a href="/products/delete/<%= product.product_id %>" class="btn btn-danger">Delete</a>
            </td>
    </tbody>
</body>
</html>