<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Managers</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/managers.css">
    <style>
        /* CSS styles for the table */
        table {
            border-collapse: collapse;
            width: 100%;
            color: #d96459;
            font-family: monospace;
            font-size: 25px;
            text-align: left;
        }
        table, th, td {
            border: 1px solid black;
            padding: 5px;
        }
        th, td {
            padding: 15px;
        }
        th {
            background-color: white;
        }
    </style>
</head>

<body>
    <%include ../navbar/navbar.ejs %>
    <h1>Managers:</h1>
    <table>
        <thread>
            <tr>
                <th>Manager ID</th>
                <th>First/Last Name</th>
                <th>Store ID</th>
                <th>Actions</th>
            </tr>
        </thread>
        <tbody>
            <% managers.forEach(function(manager) { %>
            <tr>
                <td>
                    <%= manager.name %>
                </td>
                <td>
                    <%= manager._id %>
                </td>
                <td>
                    <%= manager.salary %>
                </td>
                <td>
                    <!-- Edit button -->
                    <a href="/managers/edit/<%= manager._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <!-- Delete button with confirmation dialog -->
                    <a href="/managers/delete/<%= manager._id %>" class="btn btn-danger btn-sm"
                        onclick="return confirm('Are you sure you want to delete this manager?');">Delete</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <br>
    <!-- Add Manager button -->
    <a href="/managers/add" class="btn btn-success">Add Manager</a>
</body>
</html>